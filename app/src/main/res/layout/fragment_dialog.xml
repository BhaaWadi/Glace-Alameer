<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Fragment.DialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        app:lottie_rawRes="@raw/aniomation_connection"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_height="@dimen/_120sdp"/>

    <TextView
        android:text="@string/Please_check_your_internet_connection"
        android:textSize="@dimen/_17ssp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_4sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_connection_connect"
            android:textSize="@dimen/_20ssp"
            android:text="@string/connect"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView

            android:id="@+id/dialog_connection_canecel"
            android:textSize="@dimen/_20ssp"

            android:text="@string/Cancel"
            android:gravity="end"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"

            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>




    </LinearLayout>
</LinearLayout>